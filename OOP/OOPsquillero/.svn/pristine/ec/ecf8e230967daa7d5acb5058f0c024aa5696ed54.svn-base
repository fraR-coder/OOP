public class Movie {
	String title;
	int year;
	String director;

	Movie() {
		title = "Night of the Living Dead";
		year = 1968;
		director = "Geroge Romero";
	}

	Movie(String title, int year, String director) {
		this.title = title;
		this.year = year;
		this.director = director;
	}

	void watch() {
		System.out.println("I'm watching \"" + title + "\" (" + year + ") by " + director);
	}
}
